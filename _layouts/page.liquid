---
layout: default
---

{% comment %}<!-- page.liquid -->{% endcomment %}
<div class="post">

    <header class="page-header">
        <h1 class="post-title">{%- t page.title -%}
            {% if page.cv_pdf %}
                {% assign address_bar = page.cv_pdf | prepend: '/' | prepend: site.lang | prepend: '/assets/pdf/' | prepend: site.baseurl  %}
                {% if site.lang != site.languages.first %}
                    {% assign lang_perefix = site.lang | prepend: '/' %}
                    {% assign address_bar = address_bar | remove_first: lang_perefix  %}
                    <a href="{{ address_bar }}"
                       target="_blank" rel="noopener noreferrer" class="float-right"><i class="fa-solid fa-file-pdf"></i>
                    </a>
                {% else %}
                <a href="#" id="pdf-link" class="float-right"><i class="fa-solid fa-file-pdf"></i></a>
                    {% endif %}
            {% endif %}
        </h1>
        <p class="post-description">{%- if page.description -%}{%- t page.description -%}{%- endif -%}</p>
    </header>

    <!-- Modal Structure -->
    <div id="pdfModal" class="modal">
        <div class="modal-content">
            <span class="close">Ã—</span>
            <p>The PDF is only available in German.</p>
            <a href="{{ address_bar }}" target="_blank" rel="noopener noreferrer">View PDF</a>
        </div>
    </div>

    <!-- Add your JavaScript here -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get the modal
            var modal = document.getElementById("pdfModal");

            // Get the link that opens the modal
            var link = document.getElementById("pdf-link");

            // Get the <span> element that closes the modal
            var span = document.getElementsByClassName("close")[0];

            // When the user clicks the link, open the modal
            link.onclick = function(event) {
                event.preventDefault();
                modal.style.display = "block";
            }

            // When the user clicks on <span> (x), close the modal
            span.onclick = function() {
                modal.style.display = "none";
            }

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function(event) {
                if (event.target === modal) {
                    modal.style.display = "none";
                }
            }
        });
    </script>


    <article>
        {{ content }}
    </article>

    {%- if page.related_publications != null and page.related_publications.size > 0 -%}
        {%- assign publications = page.related_publications | replace: ", ", "," | split: "," | join: "|" -%}
        <h2>References</h2>
        <div class="publications">
            {%- bibliography -f {{ site.scholar.bibliography }} -q @*[key^={{ publications }}]* -%}
        </div>
    {%- endif -%}

    {%- if site.giscus and page.giscus_comments -%}
        {%- include giscus.liquid  -%}
    {%- endif -%}
    {% if page.magnified %}
        <script src="{{ '/assets/js/image_magnifier.js' | relative_url }}"></script>
    {% endif %}
</div>
