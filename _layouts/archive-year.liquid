---
layout: default
---
<div class="post">
  <header class="card-header">
    <h1 class="post-title"><i class="fa-solid fa-calendar fa-sm"></i> {{ page.date | date: '%Y' }}</h1>
    <p class="post-description">{%- t descriptions.archive-year -%}</p>
  </header>

  <article>
    <div>
      <table class="table table-sm table-borderless bootstrap-table-responsive">
        {% assign yearly_posts = page.posts %}
        {% assign post_count = yearly_posts | size %}
        {%- for post in yearly_posts -%}
        <tr>
          <th scope="row">{%- include date_format.liquid format='short' date_from=post -%}</th>
          {%- comment -%}<th scope="row">{%- include date_format.liquid format='long' date_from=post -%}</th>{%- endcomment -%}
          <td>
            {%- if post.redirect == blank -%}
            <!--<a class="post-link" href="{{ post.url | prepend: site.baseurl }}">{{ post.title }}</a>-->
            <a class="post-link" href="{{ post.url | prepend: site.baseurl }}">{% t post.title %}</a>
            {%- elsif post.redirect contains '://' -%}
            <!--<a class="post-link" href="{{ post.redirect }}" target="_blank">{{ post.title }}</a>-->
            <a class="post-link" href="{{ post.redirect }}" target="_blank">{% t post.title %}</a>
            {%- else -%}
            <!--<a class="post-link" href="{{ post.redirect | prepend: site.baseurl }}">{{ post.title }}</a>-->
            <a class="post-link" href="{{ post.redirect | prepend: site.baseurl }}">{% t post.title %}</a>
            {%- endif -%}
          </td>
        </tr>
        {%- endfor -%}
        {% if post_count < 18 %}
          <tr class="last-row">
            <td></td>
          </tr>
        {% endif %}
      </table>
    </div>
  </article>
</div>